<div class="container">
  <h1>{{data.song}}</h1>

  <div class="row">
    <div class="input-field col s4">
      <textarea id="user" class="materialize-textarea" data-length="30"></textarea>
      <label for="textarea2">Name</label>
      <button id="submitComment" data-song="{{data.song}}" class="btn waves-effect waves-light" type="submit" name="action">Submit
      </button>
    </div>
    <div class="input-field col s8">
      <textarea id="comment" class="materialize-textarea" data-length="120"></textarea>
      <label for="textarea2">Comment</label>
    </div>
  </div>

  <div class="col s12">
    {{#each data.comments}}
      {{> comment-block}}
    {{/each}}
  </div>
</div>

  <script src="/js/comment.js"></script>